{
	"window.zoomLevel": 0,
	"sublimeTextKeymap.promptV3Features": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "top",
	"editor.formatOnPaste": true,
	"editor.detectIndentation": false,
	"editor.insertSpaces": true,
	"editor.tabSize": 4,
    "editor.lineHeight": 21,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
	"files.trimTrailingWhitespace": true,
	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
	"workbench.startupEditor": "newUntitledFile",
	"files.associations": {
		"*.tpl": "php"
	},
	"extensions.ignoreRecommendations": true,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"php.suggest.basic": false,
	"php-docblocker.extra": [
		[
			"@author Gabriel Stringari <gabriel.stringari@grupoezoom.com.br>"
		]
	],
	"php-docblocker.gap": false,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Sublime Material Theme - Dark",
	// Path of files that need parse. That is just for addition const support.
	"CI.other": [
		"codeigniter/core/Common.php"
	],
	// Path of CI's system folder.
	"CI.system": "codeigniter",
	"gulp.autoDetect": "on",
	"auto-rename-tag.activationOnLanguage": [
		"*"
	],
	"php.executablePath": "C:\\xampp\\php7\\php.exe",
	"php.validate.executablePath": "C:\\xampp\\php7\\php.exe",
	"php.validate.run": "onSave",
    "workbench.activityBar.visible": true,
    "git.enableSmartCommit": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#343434",
        "statusBar.noFolderBackground": "#212121",
        "statusBar.debuggingBackground": "#263238"
    },
    "window.menuBarVisibility": "toggle"
}
