{
    "window.zoomLevel": 0,
	"sublimeTextKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
	"editor.snippetSuggestions": "top",
	"editor.formatOnPaste": true,
	"editor.detectIndentation": false,
	"editor.insertSpaces": true,
	"editor.tabSize": 4,
    "editor.lineHeight": 21,
    "editor.fontSize": 16,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "files.trimTrailingWhitespace": true,
    "html.format.wrapLineLength": 50,
    "html.format.wrapAttributes": "force",
	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
	"workbench.startupEditor": "newUntitledFile",
	"files.associations": {
		"*.tpl": "php"
	},
	"extensions.ignoreRecommendations": true,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"php.suggest.basic": false,
	"php-docblocker.extra": [
		[
			"@author Gabriel Stringari <gabriel@gabrielstringari.com>"
		]
	],
	"php-docblocker.gap": false,
	"workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Electron",
	// Path of files that need parse. That is just for addition const support.
	"gulp.autoDetect": "on",
	"auto-rename-tag.activationOnLanguage": [
		"*"
	],
	"php.validate.run": "onType",
    "workbench.activityBar.visible": true,
    "git.enableSmartCommit": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#343434",
        "statusBar.noFolderBackground": "#212121",
        "statusBar.debuggingBackground": "#263238",
    },
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.keymap": "none",
    "git.autofetch": true
}
